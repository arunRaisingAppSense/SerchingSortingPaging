<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Duration:</strong>
  <%= @project.duration %>
</p>
<br><br> <h3>Comments for :- <%= @project.name %> </h3>
<table>
  <thead>
    <tr>
      <th>Comments ID</th>
      <th>Title</th>
      <th>Comments</th>
      <th>Project ID</th>
      <th>Created At</th>
      <th>Updated At</th>
    </tr>
  </thead>

  <tbody>
    <% @pcomments.each do |comments| %>
      <tr>
        <td><%= comments.id %></td>
        <td><%= comments.title %></td>
        <td><%= comments.comment %></td>
        <td><%= comments.project_id %></td>
        <td><%= comments.created_at.strftime("Date(%d-%B-%y) Time(%T)") %></td>
        <td><%= comments.updated_at.strftime("Date(%d-%m-%Y) Time(%T)") %></td>
      </tr>
    <% end %>
  </tbody>
 </table><br><br><br>
