


<p id="notice"><%= notice %></p>
<% if @projects.blank? %>
  <h4>There are no Projects containing the term <%= params[:search] %>.</h4>
<% end %>
<h1>Projects</h1>
<%= render 'search', project: @project %>

<table>
  <thead>
    <tr>
      <th><%= sort_link "id" , "Project ID" %></th>
      <th><%= sort_link "name" , "Name" %></th>
      <th><%= sort_link "duration" , "Duration" %></th>
      <th><%= sort_link "created_at" , "Created At" %></th>
      <th><%= sort_link "updated_at" , "Updated At" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

 <%= render 'index_content' %>
</table><br><br>

  <%= will_paginate @projects %>
