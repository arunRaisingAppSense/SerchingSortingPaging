<p id="notice"><%= notice %></p>
<% if @projects.blank? %>
  <h4>There are no Projects containing the term <%= params[:search] %>.</h4>
<% end %>
<h1>Projects</h1>
<%= render 'search', project: @project %>

<table>
  <thead>
    <tr>
      <th><%= sort_link "id" , "Project ID" %></th>
      <th><%= sort_link "name" , "Name" %></th>
      <th><%= sort_link "duration" , "Duration" %></th>
      <th><%= sort_link "created_at" , "Created At" %></th>
      <th><%= sort_link "updated_at" , "Updated At" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.id %></td>
        <td><%= project.name %></td>
        <td><%= project.duration %></td>
        <td><%= project.created_at.strftime("Date(%d-%B-%y) Time(%T)") %></td>
        <td><%= project.updated_at.strftime("Date(%d-%m-%Y) Time(%T)") %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table><br><br>
  <%= will_paginate @projects %>
<br><br><br>

<%= link_to 'New Project', new_project_path %>
