<script>
  $(document).on("keyup", "#search-form", function(){
       $.get($("#search-form").attr("action"), $("#search-form").serialize(), null, "script");
       return false;
  });
</script>


<p id="notice"><%= notice %></p>
<% if @projects.blank? %>
  <h4>There are no Projects containing the term <%= params[:search] %>.</h4>
<% end %>
<h1>Projects</h1>
<%= render 'search', project: @project %>

<table>
  <thead>
    <tr>
      <th><%= sort_link "id" , "Project ID" %></th>
